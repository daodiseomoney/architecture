    // Cleanup
    return () => {
      layers.forEach(layer => {
        layer.removeEventListener('mouseenter', handleMouseEnter);
        layer.removeEventListener('mouseleave', handleMouseLeave);
      });
      clearInterval(brainInterval);
    };
